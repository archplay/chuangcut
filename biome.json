{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/.next",
      "!**/node_modules",
      "!**/archived",
      "!**/demo",
      "!**/temp",
      "!**/tmp",
      "!**/output",
      "!**/logs",
      "!**/data",
      "!**/.cache",
      "!**/dist",
      "!**/build",
      "!**/next-env.d.ts",
      "!**/scripts/migrations",
      "!**/scripts/import-styles.js",
      "!**/*.css"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on"
        }
      }
    }
  },
  "css": {
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    },
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
